    steps: ~
  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
        options:
          public_build_logs: true
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
        options:
          public_build_logs: true
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          next_version_callback: '.ci/prepare_release'
          release_callback: '.ci/prepare_release'
        slack:
